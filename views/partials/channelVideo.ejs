<% videos.forEach(video => { %>
    <a href="/watch?v=<%= video._id %>" class="video">
        <div class="preview">
            <img src="/api/preview/<%= video._id %>" alt="">
            <div class="video-duration"><%= formatTime(video.duration) %></div>
        </div>
        <div class="metadata">
            <h1 class="title"><%= video.title %></h1>
            <div class="meta-row">
                <h1><%= video.views %></h1>
                <h1>Views</h1>
                <h1>â€¢</h1>
                <h1><%- timeAgo(video.createdAt) %></h1>
            </div>
        </div>
    </a>
<% }); %>

<% function timeAgo(date_) {
    const date = new Date(date_);
    return formatDistanceToNow(date, { addSuffix: true, locale: uk });
} %>

<% function formatTime(seconds) {
    const minutes = Math.floor(seconds / 60);
    const secs = Math.floor(seconds % 60);
    return `${minutes}:${secs.toString().padStart(2, '0')}`;
} %>